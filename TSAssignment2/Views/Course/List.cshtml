@model CoursesViewModel;

@{
	ViewData["Title"] = "All courses";
}
<h1>All my courses</h1>
<div class="mb-3">
	<a asp-controller="Course" asp-action="Add">Add a new course</a>
</div>
@if (Model?.Courses?.Count > 0)
{
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Instructor</th>
				<th>Start Date</th>
				<th>Room #</th>
				<th># of Students</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var courses in Model.Courses)
			{
					<tr>
						<td>@courses.CourseName</td>
						<td>@courses.Instructor</td>
						<td>@courses.StartDate?.ToString("MMM dd,yyyy")</td>
						<td>@courses.RoomNumber</td>
						<td>@courses.Students?.Count</td>
						<td>
							<a asp-controller="Course" asp-action="Manage" asp-route-id="@courses.CourseId">Manage</a>
							<span class="mx-1">|</span>
							<a asp-controller="Course" asp-action="Edit" asp-route-id="@courses.CourseId">Edit</a>
						</td>
					</tr>
			}
		</tbody>

	</table>
}
else
{
		<div class="alert alert-primary" role="alert">
			Add a Course!
		</div>
}